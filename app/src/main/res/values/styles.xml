<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textview_primary_style">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_primary_left_style">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="textview_primary_wgravity_style">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textview_primary_comparator_style">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_secondary_comparator_style">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_secondary_comparator_black_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_secondary_comparator_white_style">
        <item name="android:textColor">@color/icons</item>
        <item name="android:background">@color/icons</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_secondary_comparator_gray_style">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:background">@color/secondary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_secondary_style">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_secondary_left_style">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_colors_style">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="textview_blackcolor_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="textview_whitekcolor_style">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/icons</item>
    </style>

    <style name="textview_graycolor_style">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/secondary_text</item>
    </style>

</resources>
